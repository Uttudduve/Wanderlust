<% layout("/layouts/boilerplate") %>
<div class="row mt-2 hihi">
  <h1 class="col-6 offset-3 mb-3">Signup</h1>  
  <div class="col-6 offset-3">
    <form method="post" action="/signup" novalidate class="needs-validation">
        <div class="mb-3">
        <label for="username" class="form-label mb-3">Username</label>
        <input name="username" id="username"  type="text" class="form-control" required>
        <div class="valid-feedback">Looks good!</div>
        </div>

        <div class="mb-3">
        <label for="email" class="form-label mb-3">Email</label>
        <input name="email" id="email" type="text" class="form-control" required>
        </div>

        <div class="mb-3">
        <label for="password" class="form-label mb-3">Password</label>
        <input name="password" id="password" type="password" class="form-control" required>
        </div>

        <button class="btn btn-success">Submit</button>
  </div>
</div>
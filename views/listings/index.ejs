<% layout("/layouts/boilerplate") %>
<style>
.filters{
    display: flex;
    align-items: center;
    white-space: nowrap;
    overflow-x: auto;
    overflow-y: hidden;
}

.filters::-webkit-scrollbar{
    width: 0px;
}

.filter{
    text-align: center;
    margin: 0.9rem;
    display: inline-block;
    opacity: 0.8;
}

.filter:hover{
    opacity: 1;
}

.main{
    display: flex;
    align-items:center;
    justify-content: baseline;
}
.tax-toggle{
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    width: 280px;
    padding: 1rem;
    margin-left: 1rem;
    margin-bottom: 1rem;
}

.tax-info{
    display: none;
}

</style>

<div class="main">
    <i class="fa-solid fa-angle-left"></i>
<div class="filters">
    <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-city"></i></div>
        <p>Icon cities</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-crown"></i></div>
        <p>Castle</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-water-ladder"></i></div>
        <p>Pool</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-warehouse"></i></div>
        <p>Farm</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-user"></i></div>
        <p>Most visited</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-dharmachakra"></i></div>
        <p>Historic</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beach</p>
    </div>
    <div class="filter">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctic</p>
    </div>
</div>
<i class="fa-solid fa-angle-right"></i>
<div class="tax-toggle">
<div class="form-switch form-check form-check-reverse">
      <input class="form-check-input" type="checkbox"  id="switchCheckDefault">
  <label class="form-check-label" for="switchCheckDefault">Display total before tax</label>

</div>
</div>
</div>




<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
     <% for(let listing of allListings){ %>
    <a href="/listings/<%= listing._id%>" class="listing-link">
     <div class="card col listing-card">
      <img src="<%= listing.image.url%>" class="card-img-top" alt="listing" style="height: 20rem;">
      <div class="card-img-overlay"></div>
      <div class="card-body">
        <p class="card-text">
            <b><%= listing.title %></b><br/>
            &#8377; <%=listing.price.toLocaleString("en-IN")%> /night 
            <i class="tax-info">&nbsp;&nbsp; +18% gst</i>
        </p>
      </div>
     </div>
    </a>
     <% } %>
</div>

<script>
    let taxSearch = document.getElementById("switchCheckDefault");
    taxSearch.addEventListener("click",()=>{
        let taxinfo= document.getElementsByClassName("tax-info");
        for(info of taxinfo){
            if(info.style.display != "inline"){
                info.style.display = "inline"
            }
            else {
                info.style.display = "none";
            }
        }

    })
</script>


<% layout("/layouts/boilerplate") %>
<div class="row mt-2 hihi"> 
    <div class="col-8 offset-2">
    <h3>Edit this Listing</h3>
    <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div >
         <label for="title" class="form-label mb-3">Title</label>
         <input name="listings[title]" value="<%= listing.title %>" type="text" class="form-control" required>
         <div class="valid-feedback">Looks good!</div>
         <div class="invalid-feedback">Enter valid title</div>
        </div>

        <div >
         <label for="description" class="form-label mb-3">Description</label>
         <textarea name="listings[description]" class="form-control" required><%= listing.description %></textarea>
         <div class="invalid-feedback">Please enter good description</div>
        </div>

        <div>
            Original Image <br/>
            <img src="<%=originalImageUrl%>">
        </div>

        <div >
         <label for="image" class="form-label mb-3">Upload New Image</label>
         <input name="listings[image]" class="form-control" type="file">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
             <label for="price" class="form-label mb-3">Price</label>
             <input name="listings[price]" value="<%= listing.price %>" type="number" class="form-control" required>
             <div class="invalid-feedback">Please enter price</div>
            </div>
            <div class="mb-3 col-md-8">
             <label for="country" class="form-label mb-3">Country</label>
             <input name="listings[country]" value="<%= listing.country %>" class="form-control" required>
             <div class="invalid-feedback">Please enter country name</div>
            </div>
        </div>

        <div >
         <label for="location" class="form-label mb-3">Location</label>
         <input name="listings[location]" value="<%= listing.location %>" class="form-control" required>
         <div class="invalid-feedback">Please enter location</div>
        </div>

        <button class="btn btn-success mt-3">Save</button>
    </form>
    </div>
</div>

